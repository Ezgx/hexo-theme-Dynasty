.hometopin
    max-width: 1200px
    width: -webkit-fill-available
    padding: 10px
    margin: auto

.fpostsline
    height: 1.5px
    border-radius: 20px
    color: white
    width: 90%

.webinfo-item .item-name i
    line-height: 2
    margin-right: 5px
    height 20px
    width 20px

.fposts .ftags
