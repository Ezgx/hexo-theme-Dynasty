.hometop_item.bar
    border-radius: 12px !important
    display: inline-flex !important
    width: 49%
    margin: 1%
    margin-left: 0

.recent-top-post-group
    border-radius: 12px;
    overflow: hidden;
    overflow-x: auto;
    width: 100%;
    margin-bottom: 0rem;

.recent-post-top
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    width: 100%;
