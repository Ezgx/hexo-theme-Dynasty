.recent-post-top .recent-post-item
    display: flex;
    width: 200px;
    flex-direction: column;
    align-items: flex-start;
    margin-left: 0.5rem;
    background: var(--global-bg);
    border-radius: 12px;
    overflow: hidden;
    min-width: 200px;
    height: 164px;
    max-height: 164px;
    border: #e3e8f7;
    transition: 0.3s;
    position: relative;

#recent-post-top .recent-post-item .post_cover
    width: 100%;

.recent-post-top .recent-post-item .recent-post-info
    padding: 0.3rem 0.5rem 0.3rem 0.5rem !important;
    transition: 0.3s;
    a
        color: var(--heo-font)

.recent-post-top .recent-post-item .post_cover a
    height: 100px;
    overflow: hidden;
    display: flex;

.recent-post-top .recent-post-item .recent-post-info .article-title
    -webkit-line-clamp: 2;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    line-height: 1.5;
    justify-content: center;
    align-items: flex-end;
    align-content: center;
    padding-top: .5rem;
    font-weight: bold;
    font-size: 17px !important;
    padding: 0 !important;

.hometop img
    width: 100%;
    object-fit: cover;

.recent-top-post-group
    width: 59%
    margin-right: 1%
    display: inline-block

.category-bar-item a, .tag-bar-more, .category-bar-more
    color: var(--heo-font)

.hometop-webinfo
    display: block
    padding: 15px
    background: var(--heo-background)
    border-radius: 10px
    overflow-x: hidden
    overflow-y: scroll
    width: 38%
    [data-theme="dark"]
        .hometop-webinfo
            background: var(--heo-theme)


    height: 100%
    margin-right: 2%
    &::-webkit-scrollbar
        display: none

.hometop .group1
    height: 164px
    display: flex

.hometop .group2
    height: 200px
    display: flex

@media screen and (max-width: 768px)
    .hometop .group2
        flex-flow: column
        height 400px
    .hometop .group2 .hometop_item
        width: 100% !important
        height 50%
    .hometop .group1 .hometop-webinfo
        display: none !important
    .hometop .group1 .recent-top-post-group
        width: 100%
    .hometop .fposts .ftags .hometop_item.bar
        width: 100%
    .hometop .fposts .ftags #tag-bar
        margin-bottom: 0

.hometop .descr
    height: 100%
    width: 69%
    display: inline-block
    margin-top: 13px
    padding: 15px
    background: var(--global-bg)
    border-radius: 15px

.hometop .descr span
    font-size: 25px
    font-weight: 700
    position relative
    top -20px

    +maxwidth768()
        font-size: 20px !important

.hometop .descr img
    height: 70%
    border-radius: 15px

.hometop .siteinfo
    width: 30%
    margin-right: 1%
    display: inline-block
    padding: 15px
    border-radius: 15px
    height 100%
    overflow-y: scroll
    margin-top: 13px
    background: var(--global-bg)

[data-theme="dark"] 
    .hometop .siteinfo
        background: var(--heo-theme)
        color: var(--heo-font)
        border: 1px solid #3d3d3d

.hometop
  content: ''
  position: relative
  top: -90px
  padding-top 70px
  width: 100%
  height: 100%
  background-attachment: fixed
  if hexo-config('hometop.background.type') == img
    background: url(hexo-config('hometop.background.bg')) center center
    background-size: cover !important
  else if hexo-config('hometop.background.type') == colors
    background: hexo-config('hometop.background.bg') && unquote(hexo-config('hometop.background.bg'))
  else if hexo-config('hometop.background.type') == default
    background-color: var(--hometop-bg)

[data-theme="light"]
    .hometop
        if hexo-config('hometop.background.type') == default
            background-position: 0px 0px, 24px 24px
            background-image: 
              radial-gradient(var(--hometop-bg-dot-color) 22.4%, transparent 22.4%),
              radial-gradient(var(--hometop-bg-dot-color) 22.4%, transparent 22.4%)
            background-size: 48px 48px

.hometop-creativity .inbar
    animation: rowup 10s linear infinite
    display: flex

.blog-title
    width: 100%
    color: hexo-config('hometop.title.color') && unquote(hexo-config('hometop.title.color'))
    align-items: center
    text-shadow: 0 0 3px #000
    if hexo-config('hometop.style') == 1
