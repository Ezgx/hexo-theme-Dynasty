-
  var options = {
    prev_text: '<i class="fas fa-chevron-left fa-fw"></i>',
    next_text: '<i class="fas fa-chevron-right fa-fw"></i>',
    mid_size: 1,
    escape: false
  }

if is_post()
  block content
else
  nav#pagination
    .pagination
      if is_home()
        - options.format = 'page/%d/'
      !=paginator(options)